<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TxtBold" parent="Theme.AppCompat">
        <item name ="android:textColor">@color/txt_color</item>
        <item name="android:background">@color/txt_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtSub" parent="Theme.AppCompat">
        <item name ="android:textColor">@color/txt_color</item>
        <item name="android:background">@color/txt_background</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="TxtNormal" parent="Theme.AppCompat">
        <item name ="android:textColor">@color/txt_color</item>
        <item name="android:background">@color/txt_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
